<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/llback"
    tools:context="com.logotet.dedinjeadmin.SastavActivity">


    <LinearLayout
        android:layout_width="fill_parent"
       android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/llback"
        android:paddingBottom="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/llTopButtons" android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_margin="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/seltabclr"
            android:text="@string/btn_sviigraci"
            android:id="@+id/btnVanProtokola"
/>
        <Button
            android:layout_width="0dp"
            android:layout_margin="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/unseltabclr"
            android:text="@string/btn_protokol"
            android:id="@+id/btnUProtokolu" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/seltabclr"
        android:visibility="visible"
        android:id="@+id/llSviIgraci"
        android:padding="5dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/llTopButtons"
        android:layout_alignParentLeft="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvIgraci"></ListView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/seltabclr"
        android:id="@+id/llProtokol"
        android:padding="5dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/llTopButtons"
        android:layout_alignParentLeft="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/lvUProtokolu"></ListView>

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/actionbutton"
            android:textColor="@color/btn1_font"
            android:id="@+id/btnConfirmSastav"
            android:text="@string/btn_confirmsastav"/>
    </LinearLayout>



</RelativeLayout>
