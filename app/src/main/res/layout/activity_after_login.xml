<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/dark"
    tools:context="com.logotet.dedinjeadmin.AfterLoginActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/btnStartMatch"
        android:text="@string/menuStart"
        android:background="@color/basedark"
        android:textColor="@color/complementlght"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnMakeSastav"
        android:text="@string/menuSastav"
        android:background="@color/basedark"
        android:textColor="@color/complementlght"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnStartMatch"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnEnterEvent"
        android:text="@string/menuDogadjaj"
        android:background="@color/basedark"
        android:textColor="@color/complementlght"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnMakeSastav"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnDeleteEvent"
        android:text="@string/menuBrisanje"
        android:background="@color/basedark"
        android:textColor="@color/complementlght"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnEnterEvent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnLogout"
        android:text="@string/menuLogout"
        android:background="@color/baseclr"
        android:textColor="@color/complementlght"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnDeleteEvent"/>

</RelativeLayout>

